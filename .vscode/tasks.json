{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "meson release build",
      "type": "shell",
      "command": "ninja -C release",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "meson debug build",
      "type": "shell",
      "command": "ninja -C debug",
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}